{
  "$schema": "https://beta.frontmatter.codes/frontmatter.schema.json",
  "frontMatter.templates.enabled": false,
  "frontMatter.content.autoUpdateDate": true,
  "frontMatter.site.baseURL": "https://frontmatter.codes",
  "frontMatter.content.pageFolders": [
    {
      "title": "documentation",
      "path": "[[workspace]]/content/docs"
    },
    {
      "title": "changelog",
      "path": "[[workspace]]/content/changelog",
      "previewPath": null,
      "contentTypes": ["changelog"]
    }
  ],
  "frontMatter.content.publicFolder": "public",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "previewPath": "'docs'",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "isPublishDate": true,
          "hidden": true
        },
        {
          "title": "Last modified date",
          "name": "lastmod",
          "type": "datetime",
          "isModifiedDate": true
        },
        {
          "title": "Article preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "boolean"
        },
        {
          "title": "Weight",
          "name": "weight",
          "type": "number"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        }
      ]
    },
    {
      "name": "changelog",
      "previewPath": "'docs'",
      "template": "[[workspace]]/.frontmatter/templates/release-notes.md",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "default": "Version {version} release notes"
        },
        {
          "title": "Slug",
          "name": "slug",
          "type": "slug",
          "editable": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "isPublishDate": true
        },
        {
          "title": "Last modified date",
          "name": "lastmod",
          "type": "datetime",
          "isModifiedDate": true
        }
      ]
    }
  ],
  "frontMatter.framework.id": "next",
  "frontMatter.content.snippets": {
    "Field definition": {
      "description": "Definition of a field for documentation",
      "body": [
        "## [[name]]",
        "",
        "[[&description]]",
        "",
        "### Properties",
        "",
        "",
        "",
        "### Usage",
        "",
        "```json",
        "",
        "```",
        "",
        "### Outcome",
        "",
        "```markdown",
        "---",
        "",
        "---",
        "```"
      ],
      "fields": [
        {
          "name": "name",
          "title": "name",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "description",
          "title": "description",
          "type": "string",
          "single": false,
          "default": ""
        }
      ]
    },
    "New version": {
      "description": "Insert a new version to the changelog",
      "body": [
        "## [{{version}}] - {{year}}-{{month}}-{{day}}",
        "",
        "### ‚ú® New features",
        "",
        "### üé® Enhancements",
        "",
        "### ‚ö°Ô∏è Optimizations",
        "",
        "### üêû Fixes"
      ],
      "fields": [
        {
          "type": "string",
          "name": "version",
          "title": "Version",
          "single": true
        },
        {
          "type": "string",
          "name": "year",
          "title": "Year",
          "default": "{{year}}"
        },
        {
          "type": "string",
          "name": "month",
          "title": "Month",
          "default": "{{month}}"
        },
        {
          "type": "string",
          "name": "day",
          "title": "Day",
          "default": "{{day}}"
        }
      ],
      "openingTags": "{{",
      "closingTags": "}}"
    }
  }
}